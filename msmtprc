
defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

account main
host mail.swalladge.id.au
port 587
tls_starttls on
from samuel@swalladge.id.au
user samuel@swalladge.id.au
passwordeval "gpg --quiet --for-your-eyes-only --no-tty --decrypt ~/.msmtp-main.gpg"

account default : main

